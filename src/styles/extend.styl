.navbar
    .home-link
        span
            text-indent: -10000px

    a
        &:hover, &:active, &:focus
            text-decoration none

.sidebar
    ul li
        margin-bottom 0

div[class*="language-"]
    > pre
        margin: 0

pre code
  font-size: 16px !important
  line-height: 22px !important
  @media (max-width: $MQMobile)
    font-size: 12px !important
    line-height: 15px !important


*:not([class*="language-"])
  > code
    color $cn-color-secondary
    //font-weight bold
    font-size: 16px !important
    line-height: 22px !important
    @media (max-width: $MQMobile)
      font-size: 12px !important
      line-height: 15px !important
